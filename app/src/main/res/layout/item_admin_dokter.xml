<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon Dokter -->
        <ImageView
            android:id="@+id/iv_icon_dokter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:layout_marginEnd="12dp" />

        <!-- Icon Poli -->
        <ImageView
            android:id="@+id/iv_icon_poli"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_marginEnd="12dp" />

        <!-- Info Dokter -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nama Dokter -->
            <TextView
                android:id="@+id/tv_nama_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Nama Dokter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Poli -->
            <TextView
                android:id="@+id/tv_poli_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poli: Gigi"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <!-- Spesialisasi -->
            <TextView
                android:id="@+id/tv_spesialisasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesialisasi: Dokter Gigi"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <!-- No STR / Status -->
            <TextView
                android:id="@+id/tv_no_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Tersedia"
                android:textSize="13sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Tombol Edit -->
        <ImageButton
            android:id="@+id/btn_edit_dokter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Dokter"
            android:layout_marginStart="8dp" />

        <!-- Tombol Delete -->
        <ImageButton
            android:id="@+id/btn_delete_dokter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Hapus Dokter"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>