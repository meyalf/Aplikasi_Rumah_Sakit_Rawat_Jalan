<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_bg"
            android:padding="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard Admin"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola seluruh data rumah sakit"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Section: Data Master -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Data Master"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_margin="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <!-- Kelola Pasien -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_pasien"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#E3F2FD">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="👥"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Pasien"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kelola Dokter -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_dokter"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#E8F5E9">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="👨‍⚕️"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#4CAF50" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Dokter"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <!-- Kelola Poli -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_poli"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#FFF3E0">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="🏥"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#FF9800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Poli"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kelola Jadwal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_jadwal"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#F3E5F5">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="📅"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#9C27B0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Jadwal"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#9C27B0"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <!-- Kelola Obat -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_obat"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#FCE4EC">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="💊"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#E91E63" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Obat"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#E91E63"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Verifikasi Pendaftaran -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_verifikasi_pendaftaran"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#FFF9C4">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="✅"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#FBC02D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verifikasi"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#F57F17"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Section: Laporan & Manajemen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan &amp; Manajemen"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_margin="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <!-- Laporan -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_laporan"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#E1F5FE">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="📊"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#03A9F4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#03A9F4"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kelola Akun -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_akun"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#EDE7F6">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="⚙️"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_icon_bg"
                        android:backgroundTint="#673AB7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelola Akun"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#673AB7"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Logout Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:background="#FFEBEE">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="🚪"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="@drawable/circle_icon_bg"
                    android:backgroundTint="#F44336"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>