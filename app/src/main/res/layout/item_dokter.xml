<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Emoji Dokter dengan Background Circle -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background"/>

            <!-- Default emoji cowo, nanti diganti dinamis di adapter -->
            <TextView
                android:id="@+id/tv_emoji_dokter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ðŸ‘¨ðŸ»â€âš•ï¸"
                android:textSize="32sp"
                android:gravity="center"/>
        </FrameLayout>

        <!-- Info Dokter -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nama Dokter -->
            <TextView
                android:id="@+id/tv_nama_dokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Nama Dokter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Spesialisasi -->
            <TextView
                android:id="@+id/tv_spesialisasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spesialis: Gigi"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <!-- Jadwal -->
            <TextView
                android:id="@+id/tv_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senin - Jumat â€¢ 08:00 - 12:00"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Tersedia"
                android:textSize="13sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>