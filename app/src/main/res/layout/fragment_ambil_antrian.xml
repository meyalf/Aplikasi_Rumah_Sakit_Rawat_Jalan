<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header_bg"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambil Antrian"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lengkapi data untuk mengambil antrian"
                android:textSize="14sp"
                android:textColor="#E8F4FD" />

        </LinearLayout>

        <!-- Form Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Info Dokter Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E3F2FD">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Dokter"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvNamaDokter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Ahmad Rizki, Sp.M"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvSpesialisDokter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spesialis Katarak"
                        android:textSize="14sp"
                        android:textColor="#27AE60"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvPoliDokter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poli Mata"
                        android:textSize="13sp"
                        android:textColor="#7F8C8D"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BBDEFB"
                        android:layout_marginVertical="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📅"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvJadwalDokter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senin, Rabu • 08:00 - 14:00"
                            android:textSize="13sp"
                            android:textColor="#555555" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Form Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Pilih Tanggal -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kunjungan"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvTanggalTerpilih"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Senin, 30 September 2025"
                            android:textSize="14sp"
                            android:textColor="#555555"
                            android:padding="12dp"
                            android:background="#F5F5F5" />

                        <Button
                            android:id="@+id/btnPilihTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubah"
                            android:textSize="12sp"
                            android:backgroundTint="#2196F3"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Keluhan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keluhan *"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etKeluhan"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Jelaskan keluhan Anda secara detail (minimal 10 karakter)"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:gravity="top|start"
                        android:background="@drawable/edittext_bg"
                        android:inputType="textMultiLine"
                        android:maxLines="5"
                        android:layout_marginBottom="16dp" />

                    <!-- Catatan Tambahan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catatan Tambahan (Opsional)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCatatan"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:hint="Contoh: Bawa hasil lab, alergi obat tertentu, dll"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:gravity="top|start"
                        android:background="@drawable/edittext_bg"
                        android:inputType="textMultiLine"
                        android:maxLines="3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFF8E1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ Informasi Penting"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F57C00"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Datang 15 menit sebelum jam praktek\n• Bawa kartu identitas (KTP/SIM)\n• Nomor antrian akan dikirim setelah konfirmasi\n• Hubungi rumah sakit jika ingin membatalkan"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:lineSpacingMultiplier="1.3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/btnBatal"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Batal"
                    android:textSize="14sp"
                    android:textColor="#F44336"
                    android:backgroundTint="@android:color/white"
                    android:strokeColor="#F44336"
                    android:strokeWidth="1"
                    style="?attr/materialButtonOutlinedStyle" />

                <Button
                    android:id="@+id/btnAmbilAntrian"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Ambil Antrian"
                    android:textSize="14sp"
                    android:backgroundTint="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>